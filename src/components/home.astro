---
import TronLogo from "../../public/TRON.svg";
import { Image } from "astro:assets";
---

<section
  id="home"
  class="relative flex flex-col items-center w-full min-h-screen bg-[var(--background)]"
>
  <div class="relative w-full h-screen">
    <div class="relative z-10 flex flex-col items-center h-full pt-6">
      <Image
        src={TronLogo}
        alt="Tron Legacy Logo"
        class="w-44 mx-auto"
        loading="lazy"
        decoding="async"
      />
    </div>
    <video
      autoplay
      muted
      loop
      playsinline
      preload="auto"
      class="absolute inset-0 w-full h-full object-cover z-0 opacity-75"
    >
      <source
        src="https://res.cloudinary.com/duzidxl2j/video/upload/v1744234212/TronLegacyVid_compressed_wmy0ow.mp4"
        type="video/mp4"
      />
    </video>
    
    <div
      class="absolute bottom-0 left-0 w-full h-32 z-10 pointer-events-none bg-gradient-to-t from-[var(--background)] to-transparent"
    ></div>
  </div>
  <a
  target="_blank"
  href="https://www.disneyplus.com/en-us/browse/entity-38b34f3a-05cb-42b3-810f-5f0efb696647"
  aria-label="Disney+ Link"
  rel="noopener noreferrer"
  class="w-10/11 flex items-center justify-center gap-2 mt-9 text-[var(--prim)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full"
>
  <span class="md:text-lg text-md font-light">Watch the movie on Disney+</span>
</a>
</section>