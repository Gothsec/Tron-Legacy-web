---
import { Image } from 'astro:assets';
import img1 from '../assets/gallery/samFlynn.jpg';
import img2 from '../assets/gallery/kevinFlynn.jpg';
import img3 from '../assets/gallery/quorra.jpg';
import img4 from '../assets/gallery/tron.jpg';
import img5 from '../assets/gallery/daftPunk.png';
import img6 from '../assets/gallery/blueSuit.jpg';

const images = [
  { img: img1, alt: 'Sam Flynn', filename: 'samFlynn.jpg' },
  { img: img2, alt: 'Kevin Flynn', filename: 'kevinFlynn.jpg' },
  { img: img3, alt: 'Quorra', filename: 'quorra.jpg' },
  { img: img4, alt: 'Tron', filename: 'tron.jpg' },
  { img: img5, alt: 'Daft Punk', filename: 'daftPunk.png' },
  { img: img6, alt: 'Blue Suit', filename: 'blueSuit.jpg' },
];
---

<section id="gallery" class="py-12 px-4 md:px-8 lg:px-16" style="margin-top: 90px;">
  <h2 class="text-4xl text-left mb-12 text-[var(--prim)]">Gallery</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {images.map(({ img, alt, filename }) => (
      <div class="relative group overflow-hidden rounded-3xl shadow-xl hover:shadow-2xl transition-shadow duration-300 backdrop-blur-2xl border-2 border-[#ffffff15]">
        <div class="aspect-w-4 aspect-h-3">
          <Image
            src={img}
            alt={alt}
            class="w-full h-60 object-cover transform group-hover:scale-110 transition-transform duration-500 ease-in-out"
            loading="lazy"
            decoding="async"
          />
        </div>
        
        <div class="absolute inset-0 bg-gradient-to-t from-[var(--background)]/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <div class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-2 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-300">
          <h3 class="text-xl font-medium text-[var(--white)] mb-1">{alt}</h3>
        </div>
        
        <a
          href={img.src}
          download={filename}
          class="absolute bottom-4 right-4 bg-[var(--prim)] p-3 rounded-full shadow-lg transform scale-90 opacity-0 group-hover:opacity-100 group-hover:scale-100 transition-all duration-300 hover:bg-[var(--white)] hover:shadow-[0_0_15px_rgba(109,207,245,0.5)]"
          aria-label={`Download ${filename}`}
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[var(--background)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4" />
          </svg>
        </a>
      </div>
    ))}
  </div>
</section>

<style>
  .aspect-w-4 {
    position: relative;
    padding-bottom: 75%;
    overflow: hidden;
  }
  
  .aspect-w-4 > img {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    object-fit: cover;
  }
</style>